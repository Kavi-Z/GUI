<Window x:Class="DB_App.Product_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_App"
        mc:Ignorable="d"
        Title="Product Window" Height="420" Width="800">
    <Grid>
         
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="175" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>

        
        <TextBlock Text="Product Name:" 
                   Grid.Row="0" Grid.Column="0"
                   FontSize="16" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right" 
                   Foreground="DarkBlue" 
                   Margin="10" />
        <TextBox x:Name="NameTextbox" 
                 Grid.Row="0" Grid.Column="1" 
                 Width="320" Height="30" 
                 Background="LightCyan" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" />

        
        <TextBlock Text="Description:" 
                   Grid.Row="1" Grid.Column="0"
                   FontSize="16" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right" 
                   Foreground="DarkGreen" 
                   Margin="10"
                    />
        <TextBox x:Name="DescriptionTextbox" 
                 Grid.Row="1" Grid.Column="1" 
                 Width="320" Height="150" 
                 Background="LightYellow" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" 
                          AcceptsReturn="True"
TextWrapping="Wrap"/>

        
        <TextBlock Text="Cost:" 
                   Grid.Row="2" Grid.Column="0"
                   FontSize="16" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right" 
                   Foreground="DarkRed" 
                   Margin="10" />
        <TextBox x:Name="PriceTextbox" 
                 Grid.Row="2" Grid.Column="1" 
                 Width="320" Height="30" 
                 Background="LightPink" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" 
                  />

       
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,257,23">
            <Button Content="Save"
                    Width="150"
                    Margin="10"
                    Padding="5"
                    FontSize="16"
                    Background="LimeGreen"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="Save_Product" />
            <Button Content="Cancel"
                    Width="150"
                    Margin="10"
                    Padding="5"
                    FontSize="16"
                    Background="Crimson"
                    Foreground="White"
                    />
        </StackPanel>
    </Grid>
</Window>
